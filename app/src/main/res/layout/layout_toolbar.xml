<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Pinned Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_gravity="top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin">


        <!--Normal Toolbar-->
        <RelativeLayout
            android:id="@+id/normalModeToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <!-- Custom Spinners to choose SIM-->
            <RelativeLayout
                android:layout_alignParentStart="true"
                android:animateLayoutChanges="true"
                android:id="@+id/simSpinnerWrapperWhenHeaderContracted"
                android:layout_width="105dp"
                android:layout_height="25dp">

                <Spinner
                    android:id="@+id/spinnerSimWhenHeaderContracted"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@drawable/spinner_menu"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_spinner_arrow"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:background="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backBtn"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left_arrow"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:background="@drawable/pressedstated_white_border"
                android:focusable="true"
                android:clickable="true"
                android:layout_centerVertical="true"/>

            <!-- Page Title -->
            <TextView
                android:id="@+id/pageTitle"
                android:layout_toRightOf="@id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#FFF"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/searchEditText"
                android:layout_toRightOf="@id/backBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:textColorHint="#C4C4C4"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:background="@null"/>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

</merge>